<div class="container">
 <div class="wrapper col-md-10 col-md-offset-1 col-sm-10">
<p id="notice"><%= notice %></p>

<h1>Listing Blogs</h1>
<table>
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.user.name %></td>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      
    <% end %>
    <br>
    <%= link_to 'New Blog', new_blog_path %>
    
  </tbody>
</table>
<br>
</div>
</div>
